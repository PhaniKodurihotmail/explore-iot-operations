{
  "name": "Azure IoT Ops Codespace",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-kubernetes-tools.vscode-kubernetes-tools"
      ]
    }
  },

  "remoteUser": "vscode",

  "postCreateCommand": "bash .devcontainer/setup.sh",

  "runArgs": [
    "--privileged"
  ]
}
